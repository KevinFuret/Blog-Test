<div class="text-center signin custom-sign">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'form-signin' }) do |f| %>
    <img class="mb-4" src="https://getbootstrap.com/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
    <h1 class="h3 mb-3 font-weight-normal"><%= t('sign_in') %></h1>
    <%= f.input :username, required: true, input_html: { class: 'form-control', id: 'inputUsername' }, label: false, placeholder: "Pseudo" %>
    <%= f.input :email, required: true, autofocus: true, input_html: { class: 'form-control', id: 'inputEmail' }, label: false, placeholder: "Email" %>
    <%= f.input :password, required: true, input_html: { class: 'form-control', id: 'inputPasswordMiddle' }, label: false, placeholder: "Mot de passe" %>
    <%= f.input :password_confirmation, required: true, input_html: { class: 'form-control', id: 'inputPasswordConfirm'}, label: false, placeholder: "Confirmer le mot de passe" %>
    <% if notice.nil? == false %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= notice %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% end %>

    <% if alert.nil? == false%>
      <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <%= alert %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% end %>
    <%= f.button :submit, "CrÃ©er", class: 'btn btn-lg btn-primary btn-block' %>
    <%= render "devise/shared/links" %>
  <% end %>
</div>


