<div class="text-center signin">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'form-signin' }) do |f| %>

    <img class="mb-4" src="<%= image_path('icon.png') %>" alt="" width="72" height="72">
    <h1 class="h3 mb-3 font-weight-normal"><%= t('sign_up') %></h1>
    <%= f.input :email, required: true, autofocus: true, input_html: { class: 'form-control', id: 'inputEmail' }, label: false, placeholder: 'Email' %>
    <%= f.input :password, required: true, input_html: { class: 'form-control', id: 'inputPassword' }, label: false, placeholder: 'Mot de passe' %>
    <div class="checkbox mb-3">
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
    <% if notice.nil? == false %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= notice %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% end %>

    <% if alert.nil? == false%>
      <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <%= alert %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% end %>
    <%= f.button :submit , "Se connecter", class: 'btn btn-lg btn-primary btn-block' %>
    <%= render "devise/shared/links" %>
  <% end %>
</div>

