<div class="filtre container">
  <div class="btn-group" role="group" aria-label="Basic example">
    <a href="/"><button type="button" class="btn btn-secondary">Articles</button></a>
    <a href="#"><button type="button" class="btn btn-secondary active">Auteurs</button></a>
  </div>
</div>
<div class="users-list container mt-4">
  <% if @users.nil? == false %>
    <ul class="list-group">
      <% @users.each do |user| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <a href="/users/<%= user.username %>"><%= user.username %></a>
          <span class="badge badge-primary badge-pill"><%= user.posts.count %></span>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>