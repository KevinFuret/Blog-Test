<h1><%= @post.title %></h1>
<% if defined?(@latest_post.image) %>
  <%= image_tag @post.image.url(:large) %>
<% end %>
<p><%= @post.text %></p>
<br />
<% if @post.user == current_user %>
  <a href="/posts/<%= @post.id %>/edit"><%= t('edit_post') %></a>
<% end %>

<p><a href="/"><%= t('back_home') %></a></p>