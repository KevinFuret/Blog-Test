<div class="container posts">
 <% if @latest_post.nil? == false %>
  <div  class="jumbotron p-3 p-md-5 text-white rounded posts__big">
    <div class="col-md-6 px-0 posts__big-text">
      <h1 class="display-4 font-italic"><%= @latest_post.title %></h1>
      <p class="lead my-3"><%= excerpt(@latest_post.text, 'is', radius: 20) %></p>
      <p class="lead my-3">Par <a href="/users/<%= @latest_post.user.username %>"><%= @latest_post.user.username %></a></p>
      <p class="lead mb-0"><a href="/posts/<%= @latest_post.id %>" class="text-white font-weight-bold">Continue reading...</a></p>
    </div>
    <% if @latest_post.image_file_name.nil? == false%>
      <%= image_tag @latest_post.image.url(:large), class: 'posts__big-image' %>
    <% end %>
  </div>
  <% end %>


  <div class="row mb-2">

    <% @posts.each do |post| %>
      <div class="col-md-6">
        <div class="card flex-md-row mb-4 box-shadow h-md-250">
          <div class="card-body d-flex flex-column align-items-start">
            <h3 class="mb-0">
              <p class="text-dark"><%= post.title %></p>
            </h3>
            <div class="mb-1 text-muted">Nov 12</div>
            <p class="card-text mb-auto"><%= excerpt(@posts.last.text, 'is', radius: 20) %></p>
            <a href="/posts/<%= post.id %>">Continue reading</a>
          </div>
          <% if post.image_file_name.nil? == false %>
            <%= image_tag post.image.url(:thumb), class: 'card-img-right flex-auto d-none d-md-block' %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<footer class="blog-footer">
  <p>Blog template built for <a href="https://getbootstrap.com/">Bootstrap</a> by <a href="https://twitter.com/mdo">@mdo</a>.</p>
  <p>
    <a href="#">Back to top</a>
  </p>
</footer>