<%= simple_form_for @post , html: { multipart: true } do |f| %>
  <% if @post.errors.any? %>
    <div id="errors_explanations">
      <h2><%= pluralize(@post.error.count, "error")%> prohibited this post to be saved:</h2>

      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.input :title, label: "Titre" %>
  <%= f.input :text, label: "Contenu" %>
  <%= f.file_field :image, label: "Image" %>
  <%= f.button :submit %>
<% end %>

